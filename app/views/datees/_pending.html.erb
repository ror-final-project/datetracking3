<% unless @user.pending_datees.empty? %>
<% @user.pending_datees.each do |u| %>
<%= link_to u.login, user_path(u.id) %>
Since <%= u.created_at.to_s(:long) %>
	<% if logged_in? && @user = current_user %>
		<%= link_to '[Accept]', user_datee_path(:user_id => current_user, :id => u), :method => :put, :confirm => 'Accept date request! Are you sure?' %> |
		<%= link_to '[Reject]', user_datee_path(:user_id => current_user, :id => u), :method => :delete, :confirm => 'Reject date request! Are you sure?' %>
		<% end %>
	<% end %>
<% else %>
	None
<% end %>